{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "outDir": "dist",

    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,

    "resolveJsonModule": true,
    "strict": false
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
